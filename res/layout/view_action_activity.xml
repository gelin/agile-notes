<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout android:id="@+id/action_bar"
            style="@style/ActionBar">
        <TextView android:id="@+id/title"
                style="@style/ActionBar.Title"
                android:text="@string/view_action_title"/>
        <ImageButton android:id="@+id/copy_button"
                style="@style/ActionBar.Button"
                android:src="@drawable/plus_folder"/>
        <ImageButton android:id="@+id/edit_button"
                style="@style/ActionBar.Button"
                android:src="@drawable/edit"/>
    </LinearLayout>
    
    <ListView android:id="@+id/action_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>
