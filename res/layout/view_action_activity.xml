<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout android:id="@+id/action_bar"
            style="@style/ActionBar">
        <TextView android:id="@+id/title"
                style="@style/ActionBar.Title"
                android:text="@string/view_action_title"/>
        <ImageButton android:id="@+id/ok_button"
                style="@style/ActionBar.Button"
                android:src="@drawable/ok"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/action_folders"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    
    <TextView android:id="@+id/action_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="top"
        android:scrollbars="vertical"/>

</LinearLayout>
