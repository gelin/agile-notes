<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout android:id="@+id/action_bar"
            style="@style/ActionBar">
        <TextView android:id="@+id/title"
                style="@style/ActionBar.Title"
                android:text="@string/backup_title"/>
    </LinearLayout>
    
    <TextView android:text="@string/backup"
        style="@style/GroupTitle"/>
    
    <TextView android:text="@string/backup_folder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/backup_folder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/storage_mount_warning"
        android:text="@string/storage_mount_warning"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:visibility="gone"/>
    
    <Button android:id="@+id/backup_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup"/>
        
    <TextView android:text="@string/restore"
        style="@style/GroupTitle"/>
        
    <com.lendamage.agilegtd.android.FileListView android:id="@+id/backups_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
        
    <Button android:id="@+id/restore_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/restore"/>

</LinearLayout>
