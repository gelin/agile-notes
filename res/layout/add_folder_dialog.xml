<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_folder_dialog_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView android:text="@string/folder_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/folder_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView android:text="@string/folder_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/folder_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/folder_type"/>
</LinearLayout>
